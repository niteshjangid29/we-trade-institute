<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}


    <!-- main header ------ -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Sunday</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup>C</p>
                            <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    {{>footer}}


    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () =>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            let days = weekday[currentTime.getDay()];
            let day = document.getElementById('day');
            day.innerText = days;


            let date = currentTime.getDate();
            let month = currentTime.toLocaleString('default', {month:"short"});
            let today_date = document.getElementById('today_date');
            today_date.innerText = date + " " + month;
        };
        getCurrentDay();
    </script>
</body>
<style>
    .main_header .row{
        margin: 0;
        padding: 0;
    }
    .main_header{
        margin-bottom: 60px;
    }
    #cityName{
        padding: 10px 10px 15px 25px;
    }
    #submitBtn{
        font-family: 'Nunito', sans-serif;
        font-size: 30px;
        background: #ff2d3b;
        color: #fff;
        transition: all 0.3s;
    }
    #submitBtn:hover{
        color: #ff2d3b;
        background: #fff;
    }
    .top_layer{
        display: flex;
        height: 80px;
    }
    .top_layer p{
        align-items: center;
        margin: 10px;
    }
    #temp{
        font-family: 'Nunito', sans-serif;
    }
    #city_name{
        font-family: 'Nunito', sans-serif;
        padding: 0 !important;
    }
</style>

</html>