<!-- -Scroll to Top- -->
<button id="scroll_top" onclick="topFunction()"><i class="fa fa-arrow-up"></i></button>


<style>
    /* --------scroll-top------------ */
    html{
        scroll-behavior: smooth;
    }
    #scroll_top{
        display: block;
        outline: none;
        border: none;
        position: fixed;
        bottom: 25px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: #ff2d3b;
        text-align: center;
        font-size: 25px;
        border-radius: 50%;
        z-index: 30;
        transition: 0.5s;
    }
    #scroll_top:hover{
        background: #000;
    }
    .fa-arrow-up{
        color: #fff !important;
    }
    @media only screen and (max-width: 768px) {
        #scroll-top {
            bottom: 15px;
            right: 12px;
        }
    }



    /*-----------------navbar--------------------*/
    nav {
        background: #fff;
        /* box-shadow: 0 1px 11px rgb(67 70 73 / 45%); */
    }

    /*.navigation {
        position: sticky;
    }*/

    .nav-shift {
        justify-content: right;
    }

    .navigation img {
        margin-left: 100px;
        height: 50px;
    }

    .NavItems {
        margin-right: 50px;
    }

    .NavItems li a {
        color: #000;
        font-size: 17px;
        font-weight: 600;
        text-decoration: none !important;
    }

    .NavItems li a:hover {
        color: #ff2d3b;
    }

    .NavItems li {
        display: inline-block;
        position: relative;
        margin: 0 15px;
    }

    .NavItems li:after {
        content: '';
        position: absolute;
        width: 100%;
        transform: scaleX(0);
        height: 1.5px;
        bottom: 0;
        left: 0;
        /* background-color: #fd9b02; */
        background-color: #ff2d3b;
        transform-origin: bottom right;
        transition: transform 0.4s ease-out;
    }

    .NavItems li:hover:after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }

    .scroll-shadow {
        box-shadow: 0 1px 11px rgb(67 70 73 / 45%);
    }

    @media only screen and (max-width:1130px) {
        .navigation img {
            margin-left: 30px;
        }
    }
    @media only screen and (max-width:768px) {
        .navigation img {
            margin-right: 0;
        }
    }
</style>

<script>
    $(window).scroll(function () {
        if ($(window).scrollTop()) {
            $(".navbar").addClass("scroll-shadow");
            // $("nav").addClass("fixed-top");
        }
        else {
            $(".navabr").removeClass("scroll-shadow");
            // $("nav").removeClass("fixed-top");
        }
    })


    scroll_topBtn = document.getElementById('scroll_top');
    window.onscroll = function () {
        scrollFunction()
    };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            scroll_topBtn.style.display = "block";
        }
        else {
            scroll_topBtn.style.display = "none";
        }
    }

    function topFunction() {
        document.body.scrollTop = 0;  // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }
</script>